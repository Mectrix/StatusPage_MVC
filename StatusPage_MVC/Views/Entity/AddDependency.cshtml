@model StatusPage_MVC.Models.AddDependencyViewModel

<h2>Add Dependency</h2>

<form asp-action="AddDependency" method="post">
    <div class="form-group">
        <label asp-for="EntityId">Select Entity</label>
        <select asp-for="EntityId" class="form-control" asp-items="Model.Entities"></select>
        <span asp-validation-for="EntityId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DependencyId">Dependency ID</label>
        <input asp-for="DependencyId" class="form-control" />
        <span asp-validation-for="DependencyId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Dependency</button>
</form>
